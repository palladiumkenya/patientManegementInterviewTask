
<%- include ../layouts/header.ejs %>
   
<div class="container">
        <h1><%= title %></h1>
        <% if (messages.error) { %>
            <p style="color:red"><%- messages.error %></p>
        <% } %>
         
        <% if (messages.success) { %>
            <p style="color:green"><%- messages.success %></p>
        <% } %> 
    <div class="row">
        <div class="col-md-12" style="width:105%;">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="glyphicon glyphicon-bookmark"></span> <%= title %></h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-6 col-md-6">
                          <a href="/" class="btn btn-danger btn-lg" role="button"><span class="glyphicon glyphicon-home"></span> <br/>Home</a>
                          <a href="/patients" class="btn btn-warning btn-lg" role="button"><span class="glyphicon glyphicon-stats"></span> <br/>Patients</a>
                          <a href="/patients/add" class="btn btn-primary btn-lg" role="button"><span class="glyphicon glyphicon-user"></span> <br/>Add Users</a>
                        </div>
                    </div>
                    <div class="hold" style ="width: 98%;overflow-x: auto;white-space: nowrap;">
                        <table class="table table-striped table-dark" id="patients" style="width:100%;">
                            <thead>
                                <tr>
                                    <th rowspan="2">Name</th>
                                    <th colspan="6" style="color:#3074ae;">Bio information</th>
                                    <th colspan="2" style="color:#3074ae;">Enrollment</th>
                                    <th colspan="2" style="color:#3074ae;">Contact</th>
                                </tr>
                                <tr>
                                <th scope="col">D.O.B</th>
                                <th scope="col">Gender</th>
                                <th scope="col">Age</th>
                                <th scope="col">Marital</th>
                                <th scope="col">Height</th>
                                <th scope="col">Weight</th>
                                <th scope="col">Date Enrolled</th>
                                <th scope="col">#Enr. No</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Email</th>
                                <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                        <% if (data) { %>
                        <% data.forEach(function(user){ %>
                            <tr>
                                <td><%= user.Name %></td>
                                <td><%= user.DateOfBirth.toDateString() %></td>
                                <td><%= user.Gender %></td>
                                <td><%= user.Age %></td>
                                <td><%= user.MaritalStatus %></td>
                                <td><%= user.Height %></td>
                                <td><%= user.Weight %></td>
                                <td><%= user.DateEnrolled.toDateString() %></td>
                                <td><%= user.UserID %></td>
                                <td><%= user.PhoneNumber %></td>
                                <td><%= user.Email %></td>
                                <td>
                                    <div style="float:left">
                                        <a href='/patients/edit/<%= user.UserID %>'><i style="color:green;" class="glyphicon glyphicon-edit"></i></a> &nbsp;                            
                                        <form method="post" action="/patients/delete/<%= user.id %>" style="float:right">
                                            <button type="submit" class="" name="delete" onClick="return confirm('Are you sure you want to delete?')"><i style="color:red;" class="glyphicon glyphicon-trash"></i></button>
                                            <input type="hidden" name="_method" value="DELETE" />
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                        <% } %>
                            </tbody>
                            </table>
                            </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ../layouts/footer.ejs %>